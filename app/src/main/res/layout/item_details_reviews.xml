<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="trailerImageUrl" type="String"/>
        <variable
            name="trailerImagePlaceHolder" type="int"/>
        <variable
            name="clickListener"
            type="android.view.View.OnClickListener"/>
    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/item_main_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:onClick="@{clickListener}"
        app:cardCornerRadius="0dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        tools:layout_width="match_parent">

        <ImageView
            android:id="@+id/trailer_poster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            app:imagePlaceholder="@{trailerImagePlaceHolder}"
            app:imageUrl="@{trailerImageUrl}"
            tools:layout_width="match_parent"
            tools:minHeight="200dp"/>
    </android.support.v7.widget.CardView>
</layout>