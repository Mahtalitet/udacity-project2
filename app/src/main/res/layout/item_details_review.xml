<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="overview" type="String"/>
        <variable
            name="author" type="String"/>
        <variable
            name="clickListener"
            type="android.view.View.OnClickListener"/>
    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/item_main_container"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="@dimen/details_default_card_margin">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/overview"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:ellipsize="end"
                android:gravity="start"
                android:maxLines="6"
                android:padding="@dimen/base_padding"
                android:text="@{overview}"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@+id/author"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Armedsadsadasdasdsadasdkasjdijsadkjsaldjlasjdlkasjdljsaldjsaldjaslkdjalskdjalsjdsaljdlaskjdalsjdlasjdlasjdlasjdlsajdlasjdlasjdlasjdlsajdlasjdlasjdslajdlasjdlasjdlasjdslakjdslakjdsakjdlkasjdlsajdlajdsaljdljdalsjdlajdlsajdslajdlajddsadsadasdasdater"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0.2dp"
                android:background="@color/colorPrimaryDark"
                app:layout_constraintBottom_toTopOf="@+id/author"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/author"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:drawableEnd="@drawable/ic_chevron_right"
                android:gravity="center_vertical|end"
                android:onClick="@{clickListener}"
                android:padding="@dimen/small_padding"
                android:text="@{author}"
                android:textColor="@color/colorPrimaryDark"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:text="Armeter"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</layout>